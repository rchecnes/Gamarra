      };

      $(document).ready(function(){
        //alert(localStorage.getItem("menu_activo"));
        $("ul.sidebar-menu li").removeClass("active");
        $("ul.sidebar-menu li#"+localStorage.getItem("menu_activo")).addClass("active");

        $("ul.sidebar-menu li").click(function(){
