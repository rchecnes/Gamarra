{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Persona list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Dni</th>
                <th>Nombres</th>
                <th>Apellidopaterno</th>
                <th>Apellidomaterno</th>
                <th>Fecha_nacimiento</th>
                <th>Email</th>
                <th>Telefonofijo</th>
                <th>Telefonocelular</th>
                <th>Direccion</th>
                <th>Sexo</th>
                <th>Estado</th>
                <th>Condicion</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('persona_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.dni }}</td>
                <td>{{ entity.nombres }}</td>
                <td>{{ entity.apellidoPaterno }}</td>
                <td>{{ entity.apellidoMaterno }}</td>
                <td>{% if entity.fechanacimiento %}{{ entity.fechanacimiento|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.email }}</td>
                <td>{{ entity.telefonoFijo }}</td>
                <td>{{ entity.telefonoCelular }}</td>
                <td>{{ entity.direccion }}</td>
                <td>{{ entity.sexo }}</td>
                <td>{{ entity.estado }}</td>
                <td>{{ entity.condicion }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('persona_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('persona_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('persona_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
