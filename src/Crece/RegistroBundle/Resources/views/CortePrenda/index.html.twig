{% extends '::base.html.twig' %}

{% block body -%}

    <p class="pull-right">
        <a class="btn-small btn-primary btn" href="{{ path('corteprenda_new') }}">Nuevo</a>
    </p>

    <table class="table table-striped table-bordered table-condensed">
        <thead>
            <tr>
                <th>√çtem</th>
                <th>Modelo</th>
                <th>Cantidad</th>
                <th>Fecha de corte</th>
                <th>Persona</th>
                <th colspan="2">Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% set item = 1 %}
        {% for entity in entities %}
            <tr>
                <td>{{ item }}</td>
                <td>{{ entity.modeloprenda.nombre }}</td>
                <td>{{ entity.cantidad }}</td>
                <td>{#{ entity.fechacreacion }#}</td>
                <td>{{ entity.persona.nombres }}</td>
                <td class="action-icon">
                    <a href="{{ path('corteprenda_edit', { 'id': entity.id}) }}" title="Editar registro" >
                        <i class="fa fa-pencil-square-o fa-lg"></i>
                    </a>
                </td>
            </tr>
            {% set item = item + 1 %}
        {% endfor %}
        </tbody>
    </table>

    {% endblock %}
