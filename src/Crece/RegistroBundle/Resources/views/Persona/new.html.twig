{% extends '::base.html.twig' %}

{% block body %}

<div class="">
 <form action="{{ path('persona_create') }}" method="POST" {{ form_enctype(form) }}>
   <div class="row">
      <div class="col-md-2">{{ form_row(form.dni) }}</div>
      <div class="col-md-2">{{ form_row(form.apellido_paterno) }}</div>
      <div class="col-md-2">{{ form_row(form.apellido_materno) }}</div>
      <div class="col-md-2">{{ form_row(form.nombres) }}</div>
   </div>
   <div class="row">
      <div class="col-md-2">{{ form_row(form.fecha_nacimiento) }}</div>
      <div class="col-md-2">{{ form_row(form.email) }}</div>
      <div class="col-md-2">{{ form_row(form.telefono_fijo) }}</div>
      <div class="col-md-2">{{ form_row(form.telefono_celular) }}</div>
   </div>
   <div class="row">
      <div class="col-md-2">{{ form_row(form.direccion) }}</div>
      <div class="col-md-2"><br>{{ form_row(form.sexo) }}</div>
      <div class="col-md-2"><br>{{ form_row(form.estado) }}</div>
      <div class="col-md-2"><br>{{ form_row(form.condicion) }}</div>
      <div>{{ form_row(form._token) }}</div>
   </div>
   <p class="pull-right">
     <input type="submit" value="Guardar" class="btn-small btn-primary btn" />
     <input type="button" value="Cancelar" class="btn-small btn" onclick="location.href='{{ path('persona')}}'" />
   </p>
 </form>
</div>
<script type="text/javascript">
$(document).ready(function(){

   var fecha_nacimiento_text = $('#crece_registrobundle_persona_fecha_nacimiento');

   fecha_nacimiento_text.datepicker({
      autoclose: true
   });

});

</script>
{% endblock %}
